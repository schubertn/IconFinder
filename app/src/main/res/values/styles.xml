<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for all blocks of text in the app. -->
    <style name="IconFinder.AppText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- Style for all Buttons in the app. -->
    <style name="IconFinder.AppButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/green_light</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <!-- Style for the ImageButtons in all_icons_fragment.xml containing images of the icons. -->
    <style name="IconFinder.IconButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="background">@color/white</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>